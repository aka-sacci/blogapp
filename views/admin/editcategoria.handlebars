{{#each errors}}
    <div class="alert alert-danger">{{this.texto}}</div>
{{/each}}
<h3>Editar categoria</h3>
<div class="card-body">
<form action="/admin/categorias/edit/action" method="post">
<div class="mb-3">
  <label for="nome" class="form-label">Nome:</label>
    <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome da categoria" value="{{categorias.nome}}">
</div>
<div class="mb-3">
  <label for="slug" class="form-label">Slug:</label>
    <input type="text" class="form-control" id="slug" name="slug" placeholder="Slug da categoria" value="{{categorias.slug}}">
</div>
<input name="_id" id="_id" value="{{categorias._id}}" readonly hidden>
 <button type="submit" class="btn btn-success mt-2">Editar categoria</button>
 <a href="/admin/categorias"><button type="button" class="btn btn-danger mt-2" style="float: right;">Cancelar alterações</button></a>
</form>
</div>