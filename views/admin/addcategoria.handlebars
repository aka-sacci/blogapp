{{#each errors}}
    <div class="alert alert-danger">{{this.texto}}</div>
{{/each}}
<h3>Adição de categorias</h3>
<div class="card-body">
<form action="/admin/categorias/add/action" method="post">
<div class="mb-3">
  <label for="nome" class="form-label">Nome:</label>
    <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome da categoria">
</div>
<div class="mb-3">
  <label for="slug" class="form-label">Slug:</label>
    <input type="text" class="form-control" id="slug" name="slug" placeholder="Slug da categoria">
</div>
 <button type="submit" class="btn btn-success mt-2">Criar categoria</button>
</form>
</div>